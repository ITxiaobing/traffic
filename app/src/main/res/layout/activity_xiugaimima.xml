<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff0efed"
    >
    <EditText
        android:id="@+id/phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_xiugaimima_edit"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="13dp"
        android:ems="10"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/yanzhwngma"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/phone_num"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_xiugaimima_edit"
        android:drawableLeft="@drawable/mima"
        android:drawablePadding="13dp"
        android:ems="10"
        android:hint="验证码"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/huoquyanzhengma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yanzhwngma"
        android:layout_alignTop="@+id/yanzhwngma"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/yanzhwngma"
        android:background="@drawable/btn_login_sendcode"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/xinmima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/huoquyanzhengma"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_xiugaimima_edit"
        android:drawableLeft="@drawable/xinmima"
        android:drawablePadding="13dp"
        android:ems="10"
        android:hint="新密码"
        android:padding="10dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/xinmima"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="*密码6-16个字符，包含字母和数字"
        android:textColor="@color/red"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/querenmima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/drawable_xiugaimima_edit"
        android:drawableLeft="@drawable/xinmima"
        android:drawablePadding="13dp"
        android:ems="10"
        android:hint="确认密码"
        android:padding="10dp"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button_tijiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/querenmima"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_queren"
        android:text="确         认"
        android:textColor="@color/white"
        android:textSize="25sp"/>

</RelativeLayout>