<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tib="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_peaple_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:text="吉林气象"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ll_peaple_data"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#A5A3A4"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_modify_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_setting"
        android:background="#fff0efed"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/mima_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="密码修改"
            android:textColor="@color/tan_white"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/right"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ll_modify_password"
        android:layout_marginTop="0.1dp"
        android:background="#fff0efed"
        >

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="城市管理"
            android:textColor="@color/tan_white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/current_city"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="长春"
            android:textColor="#A5A3A4"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/city"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/city"
            android:layout_marginRight="10dp"
            android:src="@drawable/right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_orther_function"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="附加功能"
            android:textColor="#A5A3A4"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ll_orther_function"
        android:background="#fff0efed"
        android:gravity="center_vertical">

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/togbt_zidongqidong"
            style="@style/toggle_button"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="自动启动"
            android:textColor="@color/tan_white"
            android:textSize="18sp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/auto_turn_on"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout5"
        android:background="#fff0efed"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="长春"
        android:textColor="#A5A3A4"
        android:textSize="15sp"/>

    <RelativeLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/auto_turn_on"
        android:layout_marginTop="0.1dp"
        android:background="#fff0efed"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="监听"
            android:textColor="@color/tan_white"
            android:textSize="18sp"/>

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/togbt_jianting"
            style="@style/toggle_button"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout6"
        android:background="#fff0efed"
        android:paddingLeft="10dp"
        android:text="是否监听预警信息"
        android:textColor="#A5A3A4"
        android:textSize="15sp"/>

    <RelativeLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="0.1dp"
        android:background="#fff0efed"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="提示音"
            android:textColor="@color/tan_white"
            android:textSize="18sp"/>

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/togbt_tishiyin"
            style="@style/toggle_button"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout7"
        android:background="#fff0efed"
        android:paddingLeft="10dp"
        android:text="是否开始提示音"
        android:textColor="#A5A3A4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView10"
        android:orientation="vertical">

        <include layout="@layout/wo_xiabu"/>
    </LinearLayout>

</RelativeLayout>